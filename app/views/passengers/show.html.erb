<h2>Passenger details page</h2>

<p>
  ID: <%= @passenger.id %>
</p>
<p>
  Name: <%= @passenger.name %>
</p>
<p>
  Phone Number: <%= @passenger.phone_num %>
</p>

<p>
  Money Spent: $<%= @passenger.net_expenditures %>
</p>

<p class='actions'>
 <%= link_to "Edit", edit_passenger_path(@passenger) %>
 <%= link_to "Delete", passenger_path(@passenger), method: :delete, data: { confirm: "Do you want to delete #{@passenger.name}?" } %>
<p>

<p>
  <%= link_to "View Trips", passenger_trips_path(@passenger)%>
</p>

<p>
  <%= link_to "Request Trip", passenger_trips_path(@passenger), method: :post %>
</p>
  
