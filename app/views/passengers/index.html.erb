<h1>Welcome to the Passengers List</h1>

<p>There are <%= @passengers.length %> passengers in our system</p>


<ul>
  <% @passengers.each do |passenger| %>
    <li>
      <strong>
        <%= link_to passenger.name, passenger_path(passenger) %>
      </strong>
      <%= link_to "Edit", edit_passenger_path(passenger) %>
      <%= link_to "Delete", passenger_path(passenger), method: :delete, data: { confirm: "Do you want to delete this passenger?" } %>
    </li>
  <% end %>
</ul>