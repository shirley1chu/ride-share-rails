<h1>Welcome to the Drivers List</h1>

<p>There are <%= @drivers.length %> drivers in our system</p>
<%= link_to "Add Driver", new_driver_path %>

<ul>
  <% @drivers.each do |driver| %>
    <li>
      <strong>
        <%= link_to driver.name, driver_path(driver) %>
      </strong>
      <%= link_to "Edit", edit_driver_path(driver) %>
      <%= link_to "Delete", driver_path(driver), method: :delete, data: { confirm: "Do you want to delete this driver?" } %>
    </li>
  <% end %>
</ul>