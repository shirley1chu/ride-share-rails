<h1>Welcome to the Trips List</h1>

<p>There are <%= @trips.length %> trips in our system</p>

<ul>
  <% @trips.each do |trip| %>
    <li>
      <strong>
        <%= link_to "Trip #: #{trip.id}", trip_path(trip) %>
      </strong>
      <%= link_to "Edit", edit_trip_path(trip) %>
      <%= link_to "Delete", trip_path(trip), method: :delete, data: { confirm: "Do you want to delete this trip?" } %>
    </li>
  <% end %>
</ul>