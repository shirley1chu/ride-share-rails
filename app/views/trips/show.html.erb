<h2>Trip details page</h2>

<p>
  Trip: <%= @trip.id %>
</p>
<p>
  Rating: <%= @trip.rating%>
</p>

<p>
  Date: <%= @trip.date %>
</p>

<p>
  Cost: $<%= @trip.cost %>
</p>

<p>
  <%# logic to handle deleted driver %>
  <% if @trip.driver%>
    <%# will fix once driver view is updated %>
    Driver: <%= @trip.driver.name %>
  <% else %>
    Driver: This driver no longer exists in the system
  <% end %>
</p>

<p>
  <%# logic to handle deleted passenger %>
  <% if @trip.passenger%>
    Passenger: <%= link_to @trip.passenger.name, passenger_path(@trip.passenger) %>
  <% else %>
    Passenger: This passenger no longer exists in the system
  <% end %>
</p>

<%= link_to "Edit", edit_trip_path(@trip) %>
<%= link_to "Delete", trip_path(@trip), method: :delete, data: { confirm: "Do you want to delete this trip?" } %>

